<hi>My Profile</hi>
<div>
<%= image_tag @user.avatar.url(:thumb), id:'user_avatar_show'%>
</div>
  <br>


<%= form_for @user do |f| %>
  <div class="form-group">
    <%= f.label :first_name %>
    <%= f.text_field :first_name %>
  </div>

  <div class="form-group">
    <%= f.label :last_name %>
    <%= f.text_field :last_name %>
  </div>

  <div class="form-group">
  <%= f.label :avatar %>
  <%= f.file_field :avatar %>
  </div>

  <%= f.submit 'Save', class: 'btn btn-default' %>
<% end %>

